<div class="form-horizontal">
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isTitleValid 'has-success'}}">
      <label class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        {{input type="text" value=item.title class="form-control" placeholder="The name of the Event"}}
        {{#if item.isTitleValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isCityValid 'has-success'}}">
      <label class="col-sm-2 control-label">City</label>
      <div class="col-sm-10">
        {{input type="text" value=item.city class="form-control" placeholder="The name of the City"}}
        {{#if item.isCityValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isCategoryValid 'has-success'}}">
      <label class="col-sm-2 control-label">Category</label>
      <div class="col-sm-10">
        {{input type="text" value=item.category class="form-control" placeholder="The name of the Category"}}
        {{#if item.isCategoryValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isAttendeeValid 'has-success'}}">
      <label class="col-sm-2 control-label">Attendee</label>
      <div class="col-sm-10">
        {{input type="number" min=0 value=item.attendee class="form-control" placeholder="The number of the Attendee"}}
        {{#if item.isAttendeeValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isImageValid 'has-success'}}">
      <label class="col-sm-2 control-label">Image</label>
      <div class="col-sm-10">
        {{input type="text" min=0 value=item.image class="form-control" placeholder="The link for image"}}
        {{#if item.isImageValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group has-feedback {{if item.isDescriptionValid 'has-success'}}">
      <label class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
        {{input type="text" min=0 value=item.description class="form-control" placeholder="The description of the Event"}}
        {{#if item.isDescriptionValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled= {{unless item.isValid true}}>{{buttonLabel}}</button>
    </div>
  </div>
</div>
