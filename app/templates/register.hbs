<div class="jumbotron col-xs-7 col-xs-offset-3">
  <h1>{{headerMessage}}</h1>

  <br/><br/>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <label for="inputEmail" class="col-form-label">Email</label> {{input type="email" value=emailAddress class="form-control" placeholder="example@email.com" autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <label for="inputPassword" class="col-form-label">Password</label> {{input type="password" value=password class="form-control" placeholder="at least 6 characters"}}
    </div>
  </div>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <label for="confirmedPassword" class="col-form-label">Confirmed Password</label> {{input type="password" value=confirmedPassword class="form-control" placeholder="at least 6 characters"}}
    </div>
  </div>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1">
      <button class="btn btn-primary btn-lg btn-block" {{action 'signUp'}} disabled= {{isDisabled}}>Sign up</button>
    </div>
  </div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
  {{#if responseError}}
    <div class="alert alert-danger">{{responseError}}</div>
  {{/if}}

</div>
